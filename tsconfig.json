{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "paths": {
      "@components/*": ["./src/shared/components/*"],
      "@ui/*": ["./src/shared/ui/*"],
      "@layouts/*": ["./src/shared/layouts/*"],
      "@assets/*": ["./src/assets/*"],
      "@styles/*": ["./src/shared/styles/*"]
    }
  }
}
